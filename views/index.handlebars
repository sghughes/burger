<h1>Eat-Da-Burger!</h1>

<h3>Not devoured</h3>
    <ul>
        {{ #each burgers }}
            {{ #unless devoured }}
                {{> burgers devoured=false}}
            {{ /unless }}
        {{ /each }}
    </ul>

<h3>Devoured</h3>
    <ul>
        {{ #each burgers }}
            {{ #unless devoured }}
                {{> burgers devoured=true}}
            {{ /unless }}
        {{ /each }}
    </ul>

<h3>Add a burger</h3>
    <form class='create-form'>
        <div class='form-group'>
            <label for="burgerInput">Burger Type:</label>
            <input type='text' id='burgerInput' name='name'>
        </div>
        <button type='submit'>Add Burger</button>
    </form>