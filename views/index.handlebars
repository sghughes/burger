<div class="jumbotron jumbotron-fluid" id='burgerBackground'>
  <div class="container">
    <h1 class="display-4 text-right">Eat-Da-Burger!</h1>
   
  </div>
</div>

<div class='container text-center'>

<h3>Add a Burger</h3>
    <form class='create-form'>
        <div class='form-group'>
            <label for="burgerInput">Burger Type:</label>
            <input type='text' id='burgerInput' name='burger_name'>
        </div>
        <button type='submit'>Add Burger</button>
    </form>

    <div class='row'>
        <div class='col-md-6'>
            <h3>Not Devoured</h3>
                <ul style='list-style: none'>
                    {{#each burgers}}
                        {{#unless devoured}}
                            {{burgers devoured=1}}
                        <li>{{this.burger_name}}</li>
                        	<button class="eatBurger" data-id="{{id}}" data-newDevour=1>
                                EAT BURGER
                            </button>
                        {{/unless}}

                    {{/each}}
                </ul>
        </div>
        <div class='col-md-6'>
            <h3>Devoured</h3>
                <ul style='list-style: none'>
                    {{#each burgers}}
                        {{#if devoured}}
                            {{burgers devoured=1}}
                            <li>{{this.burger_name}}</li>
                            <button class="eatBurger" data-id="{{id}}" data-newDevour=0>
                                ADD BURGER BACK
                            </button>
                        {{/if}}
                    {{/each}}
                </ul>
        </div>
    </div>


</div>






