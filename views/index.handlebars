<div class='container text-center'>
    <h1>Eat-Da-Burger!</h1>

    <div class='row'>
        <div class='col-md-6'>
            <h3>Not devoured</h3>
                <ul style='list-style: none'>
                    {{#each burgers}}
                        {{#unless devoured}}
                            {{burgers devoured=1}}
                        <li>{{this.burger_name}}</li>
                        	<button class="eatBurger" data-id="{{id}}" data-newDevour=1>
                                EAT BURGER
                            </button>
                        {{/unless}}

                    {{/each}}
                </ul>
        </div>
        <div class='col-md-6'>
            <h3>Devoured</h3>
                <ul style='list-style: none'>
                    {{#each burgers}}
                        {{#if devoured}}
                            {{burgers devoured=1}}
                            <li>{{this.burger_name}}</li>
                        {{/if}}
                    {{/each}}
                </ul>
        </div>
    </div>

<h3>Add a Burger</h3>
    <form class='create-form'>
        <div class='form-group'>
            <label for="burgerInput">Burger Type:</label>
            <input type='text' id='burgerInput' name='burger_name'>
        </div>
        <button type='submit'>Add Burger</button>
    </form>

</div>






